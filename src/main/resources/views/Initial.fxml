<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="300.0" prefWidth="500.0" stylesheets="@../styles/all.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.infnet.ui.controllers.Initial">
   <bottom>
      <HBox alignment="CENTER" styleClass="footer" BorderPane.alignment="TOP_CENTER">
         <children>
            <Label alignment="CENTER" text="© Fábio Pereira - Instituto Infnet" textFill="#666666" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="10.0" />
               </HBox.margin></Label>
         </children>
         <padding>
            <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <VBox BorderPane.alignment="TOP_RIGHT">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
            <TableView VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn prefWidth="75.0" text="Nome" />
                <TableColumn minWidth="-1.0" prefWidth="-1.0" text="AV1" />
                  <TableColumn prefWidth="41.0" text="AV2" />
                  <TableColumn prefWidth="41.0" text="Ações" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </center>
   <top>
      <ButtonBar BorderPane.alignment="CENTER">
         <buttons>
            <Button mnemonicParsing="false" text="Cadastrar Estudante" />
         </buttons>
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
      </ButtonBar>
   </top>
   <padding>
      <Insets left="20.0" right="20.0" />
   </padding>
</BorderPane>
