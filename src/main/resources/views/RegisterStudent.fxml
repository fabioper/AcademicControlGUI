<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.infnet.ui.desktop.controllers.RegisterStudent">
   <children>
      <Label text="Registrar Aluno:">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <VBox spacing="5.0">
         <children>
            <Label text="Nome:" />
            <TextField fx:id="nameField" promptText="Nome do estudante" />
         </children>
      </VBox>
      <HBox spacing="20.0">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label text="AV1:" />
                  <TextField fx:id="firstGradeField" promptText="Nota 1" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="AV2:" />
                  <TextField fx:id="secondGradeField" promptText="Nota 2" />
               </children>
            </VBox>
         </children>
      </HBox>
      <Button fx:id="confirmButton" alignment="TOP_CENTER" defaultButton="true" mnemonicParsing="false" onAction="#registerStudent" text="Registrar Estudante">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
   </children>
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
</VBox>
